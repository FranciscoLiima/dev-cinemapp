<p id="notice"><%= notice %></p>

<h1>Favorite Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_movies.each do |favorite_movie| %>
      <tr>
        <td><%= favorite_movie.title %></td>
        <td><%= favorite_movie.date %></td>
        <td><%= link_to 'Show', favorite_movie %></td>
        <td><%= link_to 'Edit', edit_favorite_movie_path(favorite_movie) %></td>
        <td><%= link_to 'Destroy', favorite_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite Movie', new_favorite_movie_path %>
